DECLARE

--V_VENDOR_ID     NUMBER;
--V_ITEM_ID       NUMBER;
V_DOZEN_PRICE	    NUMBER;
V_CUSTOMER_CUT    NUMBER;
BEGIN

 SELECT CUSTOMER_CUT_RATE INTO V_CUSTOMER_CUT
 FROM ENTRY_CUSTOMER
 WHERE CUSTOMER_ID  =:P10_CUSTOMER_ID;
 --RETURN (V_CUSTOMER_CUT) - (V_DOZEN_PRICE);*/

SELECT DOZEN_PRICE INTO V_DOZEN_PRICE
 FROM RATE_TODAY
 WHERE RATE_DATE =:P10_SALE_DATE;
 --AND ITEM_SIZE_ID =:P15_ITEM_SIZE_ID;

:P10_SALE_AMOUNT := V_DOZEN_PRICE * :P10_SALE_QUANTITY - :P10_SALE_QUANTITY * V_CUSTOMER_CUT;

/*SELECT ITEM_CUT INTO V_VENDOR_CUT
 FROM ITEM
 WHERE ITEM_SIZE_ID =:P15_ITEM_SIZE_ID
 AND to_number(VENDOR_ID) = :P15_VENDOR_ID;
  
 :P15_RATE := (V_BOX_RATE) - (V_VENDOR_CUT);
 --RETURN(V_BOX_RATE) - (V_VENDOR_CUT);*/
 
END;
